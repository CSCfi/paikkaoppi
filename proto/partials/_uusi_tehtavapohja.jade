.view__header
  a.view__header-link.type--back(href='#library-opettaja')
  h1.view__header-title Uusi tehtäväpohja

.view__content
  .view__wizard
    .view__wizard-back.is-disabled
    .view__wizard-step
      a.link 1. Tehtävän kuvaus
    .view__wizard-step.is-selected
      a.link 2. Tehtävän askeleet
    .view__wizard-step
      a.link 3. Esikatselu
    .view__wizard-forward
  .form.type--basic
    .view__grid#tehtava1
      .view__grid-item
        

