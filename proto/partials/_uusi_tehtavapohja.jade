          .form__item
            label Nimi
            input(type='text')
          
          .form__item
            label Lyhyt otsikko
            input(type='text')

          .form__item
            label Tehtävän kuvaus
            textarea

          .form__item
            label Ohje opettajalle
            textarea

          .form__footer
            a.button(onclick='$("#tehtava2").show();$("#tehtava1").hide()') Jatka

          
    .view__grid#tehtava2(style='display:none')
      .view__grid-item
        .form__title Tehtävän askeleet
        .form__ingress Ohje aiheesta tulee tähän.
        .form__item
          label.type--step 1.
          .form__row
            input.type--wysiwyg-title(type='text', placeholder='Askeleen otsikko')
          .form__row
            textarea.type--wysiwyg-text(placeholder='Askeleen ohje')
        .form__item#osio(style='display:none')
          label.type--step 2.
          .form__row
            input.type--wysiwyg-title(type='text', placeholder='Askeleen otsikko')
          .form__row
            textarea.type--wysiwyg-text(placeholder='Askeleen ohje')
        .form__item#osio(style='display:none')
        .form__item.type--centered
          a.button.type--form(onclick='$("#osio").show()') Lisää uusi askel
        .form__footer
            a.button(onclick='$("#tehtava3").show();$("#tehtava2").hide()') Jatka


