.view__header
  h1.view__header-title Omat tehtävät
  a.view__add(href='#library') Uusi tehtävä


.view__content
  .view__columns
    .view__column
      .list.type--tasks
        .list__item
          form
            .list__item-title Lataa tehtävä
            .list__item-description Hae tehtävä koodilla.
            .list__item-error
              .text Tehtävää ei löytynyt. Tarkista että koodi on oikein ja yritä uudestaan.
            .list__item-footer
              .list__item-input
                input.input--code(type='text', placeholder='Kirjoita koodi tähän...')
                a.button--continue(href='#map-karttaesitys') 

        a.list__item(href='#task-lempipaikkani')
          .list__item-image
          .list__item-title Lempipaikkani
          .list__item-detail 4 merkintää
        a.list__item(href='#task-suomivisa')
          .list__item-image
          .list__item-title Suomi-visa
          .list__item-detail 2 merkintää

    .view__column
      .profile
        .profile__item
          .profile__image
            img(src='assets/monster.svg')
        .profile__item
          label Olli Oppilas
        .profile__footer
          .profile__footer-item
            a(href='#login') Kirjaudu ulos
