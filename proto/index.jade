- var compileWithDocumentation = true

doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, height=device-height, initial-scale=1')
    meta(name="apple-mobile-web-app-capable", content="yes")
    link(rel="shortcut icon" href="favicon.ico")

    title Paikkaoppi-proto

    link(rel='stylesheet', type='text/css', href="style.css")
    link(rel='stylesheet', type='text/css', href="proto.css")
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-rc1/jquery.slim.min.js')
    script(type='text/javascript', src='script.js')

  body


    .app

      .app__wrapper
        .app__content
          .app__header
            //-

          .view#login
            if compileWithDocumentation
              .proto__documentation
                p Kirjautumisnäkymä. Näytetään staattisena.

            .view__content
              .form.type--login
                .app__logo

                .form__ingress
                  p PaikkaOppi on kouluille maksuton verkkopohjainen oppimisympäristö.

                .form__item
                  label Käyttäjänimi
                  input(type='text', value='oppilas')
                .form__item
                  label Salasana
                  input(type='password')
                .form__footer
                  a.button(href='#dashboard') Kirjaudu sisään

          .view#login-teacher
            if compileWithDocumentation
              .proto__documentation
                p Kirjaudu opettajana. Näytetään staattisena.

            .view__content
              .form.type--login
                .app__logo

                .form__ingress
                  p PaikkaOppi on kouluille maksuton verkkopohjainen oppimisympäristö.

                .form__item
                  label Käyttäjänimi
                  input(type='text', value='opettaja')
                .form__item
                  label Salasana
                  input(type='password')
                .form__footer
                  a.button(href='#dashboard-teacher') Kirjaudu sisään

          .view#dashboard-teacher
            if compileWithDocumentation
              .proto__documentation
                p Opettajan työpöytä. Tehtävälistaus näytetään alkuun staattisena. Linkistä pääsee katsomaan tehtävien ohjeet.

            .view__content

              .view__columns
                
                .view__column
                  a.view__add(href='#library')

                  h1.title__list Omat tehtävät

                  .list.type--tasks
                    
                    a.list__item(href='#task-lempipaikkani')
                      .list__item-image(style='background:url(assets/map.png)')
                      .list__item-title Lempipaikkani
                    a.list__item(href='#task-suomivisa')
                      .list__item-image(style='background:url(assets/map.png)')
                      .list__item-title Suomi-visa

                    

                .view__column
                  .profile
                    .profile__item
                      .profile__image
                        img(src='assets/monster.png')
                    .profile__item
                      label Kalle Kirjautunut
                    .profile__footer
                      .profile__footer-item
                        a(href='#login') Kirjaudu ulos


          .view#dashboard
            if compileWithDocumentation
              .proto__documentation
                p Oppilaan työpöytä. Tehtävälistaus näytetään staattisena. Linkistä pääsee katsomaan tehtävien ohjeet.

            .view__content

              .view__columns
                
                .view__column
                  a.view__add(href='#library')

                  h1.title__list Omat tehtävät

                  .list.type--tasks
                    
                    a.list__item(href='#task-lempipaikkani')
                      .list__item-image
                      .list__item-title Lempipaikkani
                    a.list__item(href='#task-suomivisa')
                      .list__item-image
                      .list__item-title Suomi-visa

                    

                .view__column
                  .profile
                    .profile__item
                      .profile__image
                        img(src='assets/monster.png')
                    .profile__item
                      label Kalle Kirjautunut
                    .profile__footer
                      .profile__footer-item
                        a(href='#login') Kirjaudu ulos


          .view#map-karttaesitys
            if compileWithDocumentation
              .proto__documentation
                //-

            .view__header.type--map
              a.view__header-link.type--back(href='#dashboard')
              h1.view__header-title Karttaesitys
            
            .map__wrapper
              .map__zoom
                .map__zoom-in
                .map__zoom-out
                .map__center

              .map__tools
                a.map__tools-dot(href='#mark')
                .map__tools-coords 60°10′15″N, 024°56′15″E

              .map__pointers

              .placeholder__map
            
          .view#map-lempipaikkani
            if compileWithDocumentation
              .proto__documentation
                p Lempipaikkani-kartta. Aluksi toteutetaan kartan zoomaaminen ja liikuttaminen sekä pistemäisen merkinnän lisääminen.
            
            include partials/_tehtava_lempipaikka.jade


          .view#map-suomivisa
            if compileWithDocumentation
              .proto__documentation
                p Suomivisa-kartta. Suomivisassa tarvitaan kartan liikuttamista ja zoomaamista. Itse tehtävä tehdään muualla kuin PaikkaOpissa.
            
            include partials/_tehtava_suomivisa.jade
            
          .view#library
            if compileWithDocumentation
              .proto__documentation
                p Tehtäväkirjasto. Toteutetaan aluksi staattisena. Opettajat ja oppilaat voivat selata täällä julkisia tehtäviä, sekä aloittaa haluamansa tehtävän.           
              
            .view__header
              a.view__header-link.type--back(href='#dashboard')
              h1.view__header-title Tehtäväkirjasto            


            .view__content


              h1.title__list Valitse tehtävä

              .list.type--tasks
                .list__item
                  .list__item-title Karttaesitys
                  .list__item-description Kartta ja työkalut oman esityksen luomiseen.
                  a.list__item-link(href='#map-karttaesitys') Aloita tehtävä

                .list__item
                  .list__item-title Lempipaikkani
                  .list__item-description Etsi lempipaikkasi ja merkitse se kartalle.
                  a.list__item-link(href='#task-lempipaikkani-aloita') Aloita tehtävä

                .list__item
                  .list__item-title Suomi-visa
                  .list__item-description Tässä visassa harjoitellaan kartan käyttöä hyödyntäen kartta-alustan erilaisia työkaluja ja kartta-aineistoja.
                  a.list__item-link(href='#task-suomivisa-aloita') Aloita tehtävä

                .list__item
                  .list__item-title Luokkaretki
                  .list__item-description Tämä tehtävä ei ole vielä käytössä.
                  a.list__item-link.is-inactive Aloita tehtävä


          

