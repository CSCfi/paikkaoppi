- var compileWithDocumentation = true

doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, height=device-height, initial-scale=1')
    meta(name="apple-mobile-web-app-capable", content="yes")
    link(rel="shortcut icon" href="favicon.ico")

    title Paikkaoppi-proto

    link(rel='stylesheet', type='text/css', href="style.css")
    link(rel='stylesheet', type='text/css', href="proto.css")
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-rc1/jquery.slim.min.js')
    script(type='text/javascript', src='script.js')

  body


    .app

      .app__wrapper
        .app__content
          .app__header
            //-

          .view#login
            if compileWithDocumentation
              .proto__documentation
                p Kirjautumisnäkymä. Näytetään staattisena.

            .view__content
              .form.type--login
                .app__logo

                .form__ingress
                  p PaikkaOppi on kouluille maksuton verkkopohjainen oppimisympäristö.

                .form__item
                  label Käyttäjänimi
                  input(type='text')
                .form__item
                  label Salasana
                  input(type='password')
                .form__footer
                  a.button(href='#dashboard') Kirjaudu sisään

          .view#dashboard
            if compileWithDocumentation
              .proto__documentation
                p Oppilaan työpöytä. Tehtävälistaus näytetään staattisena. Linkistä pääsee katsomaan tehtävien ohjeet.

            .view__content

              .view__columns
                
                .view__column
                  a.view__add(href='#library')

                  h1.title__list Omat tehtävät

                  .list.type--tasks
                    
                    a.list__item(href='#task-lempipaikkani')
                      .list__item-image(style='background:url(assets/map.png)')
                      .list__item-link Lempipaikkani
                    a.list__item
                      .list__item-image(style='background:url(assets/map.png)')
                      .list__item-link Luokkaretki

                    

                .view__column
                  .profile
                    .profile__item
                      .profile__image
                        img(src='assets/monster.png')
                    .profile__item
                      label Kalle Kirjautunut
                    .profile__item
                      label kalle.kirjautunut@koulu.fi
                    .profile__footer
                      .profile__footer-item
                        a(href='#settings') Muokkaa omia tietoja
                      .profile__footer-item
                        a(href='#login') Kirjaudu ulos

          .view#map-lempipaikkani
            if compileWithDocumentation
              .proto__documentation
                p Lempipaikkani-kartta. Aluksi toteutetaan kartan zoomaaminen ja liikuttaminen sekä pistemäisen merkinnän lisääminen.

            .popup#task-lempipaikkani-aloita
              if compileWithDocumentation
                .proto__documentation
                  p Tehtävän ohjeet. Ensimmäisessä vaiheessa toteutetaan yhden pistemäisen merkinnän lisääminen kartalle, kartan zoomaus ja liikuttaminen.

              .view__content
                .accordion
                  .accordion__item
                    h2.accordion__title Merkitse kartalle oma lempipaikkasi
                    .accordion__text
                      ul.list.type--text
                        li.list__item Opettele kartan käyttöä.
                        li.list__item Etsi kartalta oma lempipaikkasi.
                        li.list__item Merkitse kartalle valitsemasi paikka ja kerro miksi se on sinulle tärkeä.
                  
                  .accordion__footer
                    a.button(href='#map-lempipaikkani') Aloita tehtävä

            .popup#task-lempipaikkani
              if compileWithDocumentation
                .proto__documentation
                  p Tehtävän ohjeet. Ensimmäisessä vaiheessa toteutetaan yhden pistemäisen merkinnän lisääminen kartalle, kartan zoomaus ja liikuttaminen.

              .view__content
                .accordion
                  .accordion__item
                    h2.accordion__title Merkitse kartalle oma lempipaikkasi
                    .accordion__text
                      ul.list.type--text
                        li.list__item Opettele kartan käyttöä.
                        li.list__item Etsi kartalta oma lempipaikkasi.
                        li.list__item Merkitse kartalle valitsemasi paikka ja kerro miksi se on sinulle tärkeä.
                  
                  .accordion__footer
                    a.button(href='#map-lempipaikkani') Jatka tehtävää

            .popup#mark

              .form.type--basic

                .popup__header
                  a.popup__header-link.type--back(href='#map-lempipaikkani')
                  h1.popup__header-title Uusi merkintä

                .form__text
                  .form__text-title Koordinaatit
                  .form__text-value 60°10′15″N, 024°56′15″E

                .form__item
                  label Nimi
                  input(type='text')
                .form__item
                  label Kuvaus
                  textarea
                .form__footer
                  a.button(href='#map-lempipaikkani') Tallenna merkintä


            .popup#mark-view

              .form.type--basic

                .popup__header
                  a.popup__header-link.type--back(href='#map-lempipaikkani')
                  h1.popup__header-title Kallen lempipaikka

                .form__text
                  .form__text-title Koordinaatit
                  .form__text-value 60°10′15″N, 024°56′15″E

                .form__item
                  label Nimi
                  .form__value Kallen lempipaikka
                .form__item
                  label Kuvaus
                  .form__value Pieni kivi puron vieressä.
                //- .form__footer
                //-   a.button(href='#map-lempipaikkani') Muokkaa merkintää


            .view__header.type--map
              a.view__header-link.type--back(href='#dashboard')
              h1.view__header-title Lempipaikkani
              a.view__header-link.type--info(href='#task-lempipaikkani') Ohjeet
            
            .map__wrapper
              .map__zoom
                .map__zoom-in
                .map__zoom-out
                .map__center

              .map__tools
                a.map__tools-dot(href='#mark')
                .map__tools-coords 60°10′15″N, 024°56′15″E

              .map__pointers
                a.map__pointer(style='top:300px;left:190px;', href='#mark-view')


              .placeholder__map
            
          //- .view#map-luokkaretki
          //-   .view__header
          //-     a.view__header-link(href='#dashboard') Takaisin
          //-     a.view__header-link(href='#task-luokkaretki') Ohjeet
            
          //-   .map__wrapper
          //-     .placeholder__map
            


          .view#settings
            if compileWithDocumentation
              .proto__documentation
                p Omien tietojen ylläpito. Toteutetaan alkuun staattisena näkymänä.            
            
            .view__header
              a.view__header-link.type--back(href='#dashboard')
              h1.view__header-title Omat tiedot
            
            .view__content
            
              .form.type--basic

                .profile__item
                  .profile__image
                    img(src='assets/monster.png')

                .form__item
                  label Nimi
                  input(type='text', value='Kalle Kirjautunut')
                .form__item
                  label Sähköpostiosoite
                  input(type='email', value='kalle.kirjautunut@koulu.fi')
                .form__footer
                  a.button(href='#dashboard') Tallenna omat tiedot

          .view#library
            if compileWithDocumentation
              .proto__documentation
                p Tehtäväkirjasto. Toteutetaan aluksi staattisena. Opettajat ja oppilaat voivat selata täällä julkisia tehtäviä, sekä aloittaa haluamansa tehtävän.           
              
            .view__header
              a.view__header-link.type--back(href='#dashboard')
              h1.view__header-title Tehtäväkirjasto            


            .view__content


            
              h1.title__list Sinulle jaetut tehtävät

              .list.type--tasks
                
                a.list__item(href='#task-lempipaikkani-aloita')
                  .list__item-link Lempipaikkani
                  .list__item-description Etsi lempipaikkasi ja merkitse se kartalle.
                a.list__item
                  .list__item-link Luokkaretki
                  .list__item-description Tämä tehtävä ei ole vielä käytössä.

              h1.title__list Kaikki tehtävät

              .list.type--tasks
                
                a.list__item(href='#task-lempipaikkani-aloita')
                  .list__item-link Lempipaikkani
                  .list__item-description Etsi lempipaikkasi ja merkitse se kartalle.
                a.list__item
                  .list__item-link Luokkaretki
                  .list__item-description Tämä tehtävä ei ole vielä käytössä.

          

